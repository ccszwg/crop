consider this:
--------------


% Is the `dvips' driver loaded from `graphics' or `color'?
\@ifundefined{Gin@driver}{}%
{%
  \ifx\Gin@driver\@empty\else
    \filename@parse{\Gin@driver}\def\reserved@a{dvips}%
    \ifx\filename@base\reserved@a\FL@dvipstrue\fi
  \fi
}


% Are we using `pdfTeX'?
\ifx\pdfoutput\undefined\else
  \ifx\pdfoutput\relax\else
    \ifcase\pdfoutput\else
      \ClassInfo{fl}{generating code for pdfTeX}%
      \setlength\pdfpagewidth{\paperwidth}%
      \setlength\pdfpageheight{\paperheight}%
      \FL@dvipsfalse
    \fi
  \fi
\fi


% Are we using `VTeX'?
\ifx\VTeXversion\undefined\else
  \ClassInfo{fl}{generating code for VTeX}%
  \setlength\mediawidth{\paperwidth}
  \setlength\mediaheight{\paperheight}
  \ifcase\OpMode\relax% DVI
  \or% PDF
    \FL@dvipsfalse
  \or% PS
    \FL@dvipsfalse
  \else
    \ClassError{fl}
      {VTeX in \string\OpMode =\the\OpMode is not supported}%
      {Do not proceed!}
  \fi
\fi


\ifFL@dvips
  \ClassInfo{fl}{generating code for dvips}%
  \special{papersize=\the\paperwidth,\the\paperheight}%
\fi

